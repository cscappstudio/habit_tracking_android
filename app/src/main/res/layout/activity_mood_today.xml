<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <FrameLayout
        android:id="@+id/btn_back_header"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/shape_circle_fill"
        android:backgroundTint="#E1ECEC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_arrow_left"
            tools:ignore="ContentDescription" />
    </FrameLayout>


    <TextView
        android:id="@+id/tv_question"
        style="@style/Text_700_Bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:autoSizeMaxTextSize="24sp"
        android:autoSizeMinTextSize="20sp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:maxLines="1"
        android:text="How are you feeling today?"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_back_header"
        tools:ignore="UnusedAttribute" />


    <TextView
        android:id="@+id/tv_des"
        style="@style/Text_400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:autoSizeMaxTextSize="15sp"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeTextType="uniform"
        android:maxLines="1"
        android:text="Share with us how you feel today"
        android:textColor="#393E3C"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_question"
        tools:ignore="UnusedAttribute" />

    <ImageView
        android:id="@+id/ic_mood_great"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_mood_1"
        app:layout_constraintEnd_toStartOf="@id/ic_mood_good"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_des" />

    <TextView
        android:id="@+id/tv_great"
        style="@style/Text_700_Med"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:autoSizeMaxTextSize="15sp"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeTextType="uniform"
        android:maxLines="1"
        android:text="Great"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/ic_mood_great"
        app:layout_constraintStart_toStartOf="@id/ic_mood_great"
        app:layout_constraintTop_toBottomOf="@id/ic_mood_great"
        tools:ignore="UnusedAttribute" />

    <ImageView
        android:id="@+id/ic_mood_good"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_mood_1"
        app:layout_constraintEnd_toStartOf="@id/ic_mood_neutral"
        app:layout_constraintStart_toEndOf="@id/ic_mood_great"
        app:layout_constraintTop_toBottomOf="@id/tv_des" />

    <TextView
        android:id="@+id/tv_good"
        style="@style/Text_700_Med"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:autoSizeMaxTextSize="15sp"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeTextType="uniform"
        android:maxLines="1"
        android:text="Good"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/ic_mood_good"
        app:layout_constraintStart_toStartOf="@id/ic_mood_good"
        app:layout_constraintTop_toBottomOf="@id/ic_mood_good"
        tools:ignore="UnusedAttribute" />

    <ImageView
        android:id="@+id/ic_mood_neutral"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_mood_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ic_mood_good"
        app:layout_constraintTop_toBottomOf="@id/tv_des" />

    <TextView
        android:id="@+id/tv_neutral"
        style="@style/Text_700_Med"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:autoSizeMaxTextSize="15sp"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeTextType="uniform"
        android:maxLines="1"
        android:text="Neutral"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/ic_mood_neutral"
        app:layout_constraintStart_toStartOf="@id/ic_mood_neutral"
        app:layout_constraintTop_toBottomOf="@id/ic_mood_neutral"
        tools:ignore="UnusedAttribute" />


    <ImageView
        android:id="@+id/ic_mood_not_great"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_mood_1"
        app:layout_constraintEnd_toStartOf="@id/ic_mood_bad"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_great" />

    <TextView
        android:id="@+id/tv_not_great"
        style="@style/Text_700_Med"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:autoSizeMaxTextSize="15sp"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeTextType="uniform"
        android:maxLines="1"
        android:text="Not great"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/ic_mood_not_great"
        app:layout_constraintStart_toStartOf="@id/ic_mood_not_great"
        app:layout_constraintTop_toBottomOf="@id/ic_mood_not_great"
        tools:ignore="UnusedAttribute" />

    <ImageView
        android:id="@+id/ic_mood_bad"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_mood_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ic_mood_not_great"
        app:layout_constraintTop_toBottomOf="@id/tv_great" />

    <TextView
        android:id="@+id/tv_bad"
        style="@style/Text_700_Med"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:autoSizeMaxTextSize="15sp"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeTextType="uniform"
        android:maxLines="1"
        android:text="Bad"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/ic_mood_bad"
        app:layout_constraintStart_toStartOf="@id/ic_mood_bad"
        app:layout_constraintTop_toBottomOf="@id/ic_mood_bad"
        tools:ignore="UnusedAttribute" />

<!--    <androidx.constraintlayout.widget.ConstraintLayout-->
<!--        android:id="@+id/show_feeling_list"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="0dp"-->
