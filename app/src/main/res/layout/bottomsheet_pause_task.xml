<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_white_cornertop_20"
    android:paddingHorizontal="@dimen/_19sdp"
    android:paddingTop="@dimen/_11sdp"
    android:orientation="vertical"
    android:paddingBottom="@dimen/_34sdp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:text="Pause this task?"
        android:textColor="@color/gray"
        android:textSize="12sp"
        android:fontFamily="@font/worksans_medium"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_pause"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_12sdp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        android:layout_height="wrap_content"/>

    <include
        android:id="@+id/layout_btn_save"
        layout="@layout/btn_save"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</androidx.appcompat.widget.LinearLayoutCompat>