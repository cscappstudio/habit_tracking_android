<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="item"
            type="com.cscmobi.habittrackingandroid.data.model.Task" />
        <variable
            name="listener"
            type="com.cscmobi.habittrackingandroid.presentation.ItemWithPostitionListenr" />
    </data>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/_20sdp"
    android:background="@drawable/bg_white_corner_20"
    android:backgroundTint="@color/white_smoke"
    android:layout_marginBottom="@dimen/_6sdp"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatImageView
        android:paddingTop="@dimen/_12sdp"
        android:paddingBottom="@dimen/_11sdp"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_item_collection2"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="Practice affirmations"
        android:layout_marginHorizontal="@dimen/_13sdp"
        android:layout_gravity="center_vertical"

        android:textColor="@color/shadow_gray"
        android:fontFamily="@font/montserratalternates_semibold"
        android:textSize="@dimen/_11ssp"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:src="@drawable/ic_plus_circle"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"/>

</androidx.appcompat.widget.LinearLayoutCompat>
</layout>