<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<LinearLayout
    android:id="@+id/v_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/_10sdp"
    android:background="@drawable/bg_white_corner_20"
    android:outlineSpotShadowColor="#33000000"
    android:paddingHorizontal="@dimen/_16sdp"
    android:layout_margin="@dimen/_10sdp"
    android:orientation="vertical"
    android:paddingVertical="@dimen/_17sdp"
    tools:targetApi="p">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginBottom="@dimen/_14sdp"
       >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_previos"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"

            android:layout_height="wrap_content"
            android:src="@drawable/arrow_left_circle"

            />

        <TextView
            android:id="@+id/monthYearTV"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Feb 2021"
            android:textSize="19sp"
            android:fontFamily="@font/worksans_bold"
            android:textFontWeight="700"
            android:textAlignment="center"
            android:textColor="@color/blue"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"

            android:src="@drawable/arrow_right_circle"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="M"
            android:textColor="@color/bottle_green"
            android:fontFamily="@font/worksans_bold"
            android:textSize="12sp"
            android:textFontWeight="700"
            android:textAlignment="center"
           />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="T"
            android:textColor="@color/bottle_green"
            android:fontFamily="@font/worksans_bold"
            android:textSize="12sp"
            android:textAlignment="center"
           />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="W"
            android:textColor="@color/bottle_green"
            android:fontFamily="@font/worksans_bold"
            android:textSize="12sp"            android:textAlignment="center"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="T"
            android:textColor="@color/bottle_green"
            android:fontFamily="@font/worksans_bold"
            android:textSize="12sp"
            android:textAlignment="center"
           />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="F"
            android:textColor="@color/bottle_green"
            android:fontFamily="@font/worksans_bold"
            android:textSize="12sp"
            android:textAlignment="center"
           />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="S"
            android:textColor="@color/bottle_green"
            android:fontFamily="@font/worksans_bold"
            android:textSize="12sp"
            android:textAlignment="center"
          />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="S"
            android:textColor="@color/bottle_green"
            android:fontFamily="@font/worksans_bold"
            android:textSize="12sp"
            android:textAlignment="center"
           />


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/calendarRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:visibility="invisible"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>
    </FrameLayout>

</LinearLayout>
</layout>