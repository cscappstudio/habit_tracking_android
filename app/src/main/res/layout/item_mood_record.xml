<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="79dp">

    <ImageView
        android:id="@+id/ava_day"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="9dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_calendar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />


    <TextView
        android:id="@+id/tv_day"
        style="@style/Text_600_Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:textColor="#54BA8F"
        android:textSize="14sp"
        app:layout_constraintHeight_max="76dp"
        app:layout_constraintStart_toStartOf="@id/ava_day"
        app:layout_constraintEnd_toEndOf="@id/ava_day"
        app:layout_constraintTop_toTopOf="@id/ava_day"
        app:layout_constraintBottom_toBottomOf="@id/ava_day"
        tools:targetApi="p" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/shape_round_30_fill"
        android:elevation="9dp"
        android:outlineSpotShadowColor="@color/gnt_black_30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ava_day"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UnusedAttribute">

        <TextView
            android:id="@+id/tv_title"
            style="@style/Text_600_Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:textColor="#1F005F"
            android:textSize="15sp"
            app:layout_constraintHeight_max="76dp"
            app:layout_constraintStart_toEndOf="@id/ic_mood"
            app:layout_constraintTop_toTopOf="parent"
            tools:targetApi="p" />

        <TextView
            android:id="@+id/tv_des"
            style="@style/Text_600"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:paddingHorizontal="12dp"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/gnt_fill_shape_round_20"
            android:backgroundTint="#33EDCA15"
            android:gravity="center"
            android:text="Great"
            android:textColor="#EDCA15"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_max="76dp"
            app:layout_constraintStart_toEndOf="@id/ic_mood"
            tools:targetApi="p" />

        <TextView
            android:id="@+id/tv_because"
            style="@style/Text_600"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:paddingHorizontal="12dp"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/gnt_fill_shape_round_20"
            android:backgroundTint="#33EDCA15"
            android:gravity="center"
            android:text="Great"
            android:textColor="#EDCA15"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_max="76dp"
            app:layout_constraintStart_toEndOf="@id/tv_des"
            tools:targetApi="p" />

        <TextView
            android:id="@+id/tv_etc"
            style="@style/Text_600"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="..."
            android:visibility="gone"
            android:textColor="#EDCA15"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_max="76dp"
            app:layout_constraintStart_toEndOf="@id/tv_because"
            tools:targetApi="p" />


        <ImageView
            android:id="@+id/ic_mood"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_mood_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
