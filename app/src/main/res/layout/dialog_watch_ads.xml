<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_40sdp"
            android:background="@drawable/bg_white_corner_30"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingVertical="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_max="320dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_84sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/img_trophy" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_black_close"
                    android:tint="#121111" />

            </FrameLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/worksans_bold"
                android:text="@string/more_habits_unlock_now"
                android:textAlignment="center"
                android:maxLines="1"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="18sp"
                android:autoSizeMinTextSize="15sp"
                android:textColor="@color/jade_black"
                android:textSize="18sp"
                tools:ignore="UnusedAttribute" />

            <TextView
                android:id="@+id/txt_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/worksans_regular"
                android:lineHeight="21dp"
                android:text="@string/watch_an_ad_to_unlock_2_extra_habit_slots_nor_go_ad_free_for_unlimited_usage"
                android:textAlignment="center"
                android:textColor="@color/jade_black"
                android:textSize="12sp"
                tools:ignore="UnusedAttribute" />

            <TextView
                android:id="@+id/txt_watch_ads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_white_border_black_corner_20"
                android:fontFamily="@font/worksans_semibold"
                android:paddingVertical="11dp"
                android:text="@string/watch_an_ad"
                android:textAlignment="center"
                android:textColor="@color/dim_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_go_ad_free"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_white_corner_20"
                android:backgroundTint="@color/teal_green"
                android:fontFamily="@font/worksans_semibold"
                android:paddingVertical="11dp"
                android:text="@string/go_ad_free"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>