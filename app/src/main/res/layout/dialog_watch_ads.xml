<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/bg_white_corner_30"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_20sdp"
            android:paddingVertical="@dimen/_16sdp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_84sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/img_trophy" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_black_close"
                    android:tint="#121111" />

            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAlignment="center"
                android:fontFamily="@font/worksans_bold"
                android:text="More Habits? Unlock Now!"
                android:textColor="@color/jade_black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/worksans_regular"
                android:lineHeight="21dp"
                android:text="Watch an ad to unlock 2 extra habit slots\nOr go ad-free for unlimited usage"
                android:textAlignment="center"
                android:textColor="@color/jade_black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_watch_ads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_white_border_black_corner_20"
                android:fontFamily="@font/worksans_semibold"
                android:paddingVertical="11dp"
                android:text="Watch ads"
                android:textAlignment="center"
                android:textColor="@color/dim_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_go_ad_free"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_white_corner_20"
                android:backgroundTint="@color/teal_green"
                android:fontFamily="@font/worksans_semibold"
                android:paddingVertical="11dp"
                android:text="Go ad-free"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>
    </RelativeLayout>
</layout>