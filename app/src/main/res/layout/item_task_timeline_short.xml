<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="104dp">

    <ImageView
        android:id="@+id/ava_day"
        android:layout_width="36dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        app:layout_constraintDimensionRatio="36:104"
        android:scaleType="fitXY"
        android:src="@drawable/node_short_done"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="82dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_white_round_20"
        android:elevation="12dp"
        android:outlineSpotShadowColor="@color/gnt_black_30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ava_day"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UnusedAttribute">

        <TextView
            android:id="@+id/tv_title"
            style="@style/Text_600_Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="Great"
            android:textColor="#1F005F"
            android:textSize="15sp"
            app:layout_constraintHeight_max="76dp"
            app:layout_constraintStart_toEndOf="@id/ava_alarm"
            app:layout_constraintTop_toTopOf="parent"
            tools:targetApi="p" />

        <TextView
            android:id="@+id/tv_feeling"
            style="@style/Text_600"
            android:layout_width="70dp"
            android:layout_height="24dp"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/gnt_fill_shape_round_20"
            android:backgroundTint="#33EDCA15"
            android:gravity="center"
            android:text="Great"
            android:textColor="#EDCA15"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_max="76dp"
            app:layout_constraintStart_toEndOf="@id/ava_alarm"
            tools:targetApi="p" />

        <TextView
            android:id="@+id/tv_because"
            style="@style/Text_600"
            android:layout_width="70dp"
            android:layout_height="24dp"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/gnt_fill_shape_round_20"
            android:backgroundTint="#33EDCA15"
            android:gravity="center"
            android:text="Great"
            android:textColor="#EDCA15"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_max="76dp"
            app:layout_constraintStart_toEndOf="@id/tv_feeling"
            tools:targetApi="p" />

        <TextView
            android:id="@+id/tv_etc"
            style="@style/Text_600"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="..."
            android:textColor="#EDCA15"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_max="76dp"
            app:layout_constraintStart_toEndOf="@id/tv_because"
            tools:targetApi="p" />


        <ImageView
            android:id="@+id/ava_alarm"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="@dimen/_10sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_mood_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
