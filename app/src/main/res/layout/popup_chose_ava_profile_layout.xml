<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:background="@drawable/shape_top_round_20">


        <ImageView
            android:id="@+id/img_ava"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginTop="6dp"
            android:scaleType="fitXY"
            android:src="@drawable/ava_profile_1"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_max="150dp"
            tools:ignore="UnusedAttribute" />


        <TextView
            android:id="@+id/tv_change"
            style="@style/Text_500_Med"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="24dp"
            android:text="Choose your character"
            android:textColor="#393E3C"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_ava"
            tools:ignore="UnusedAttribute" />

        <ImageView
            android:id="@+id/img_ava_1"
            android:layout_width="@dimen/_124sdp"
            android:layout_height="@dimen/_124sdp"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/ava_profile_1"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintEnd_toStartOf="@id/img_ava_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_change"
            app:layout_constraintWidth_max="200dp"
            tools:ignore="UnusedAttribute" />

        <ImageView
            android:id="@+id/img_ava_2"
            android:layout_width="@dimen/_124sdp"
            android:layout_height="@dimen/_124sdp"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/ava_profile_2"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_ava_1"
            app:layout_constraintTop_toBottomOf="@id/tv_change"
            app:layout_constraintWidth_max="200dp"
            tools:ignore="UnusedAttribute" />

        <ImageView
            android:id="@+id/img_ava_3"
            android:layout_width="@dimen/_124sdp"
            android:layout_height="@dimen/_124sdp"
            android:scaleType="fitXY"
            android:src="@drawable/ava_profile_3"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintEnd_toStartOf="@id/img_ava_4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_ava_1"
            app:layout_constraintWidth_max="200dp"
            tools:ignore="UnusedAttribute" />

        <ImageView
            android:id="@+id/img_ava_4"
            android:layout_width="@dimen/_124sdp"
            android:layout_height="@dimen/_124sdp"
            android:scaleType="fitXY"
            android:src="@drawable/ava_profile_4"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_ava_3"
            app:layout_constraintTop_toBottomOf="@id/img_ava_1"
            app:layout_constraintWidth_max="200dp"
            tools:ignore="UnusedAttribute" />
        <TextView
            android:id="@+id/btn_change"
            style="@style/Text_700_Med"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="68dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/shape_round_30_fill"
            android:backgroundTint="#B5B5B5"
            android:gravity="center"
            android:enabled="false"
            android:text="CHANGE"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="UnusedAttribute" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>